# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Services Configuration (Optional - for Google Reviews integration)
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here
GOOGLE_CLOUD_PROJECT_ID=your-project-id-here

# Google Service Account (Choose ONE of the following options):
# Option 1: Individual environment variables (RECOMMENDED)
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
GOOGLE_PRIVATE_KEY_ID=your-private-key-id-here
GOOGLE_CLIENT_ID=your-client-id-here

# Option 2: Complete JSON as single environment variable (ALTERNATIVE)
# GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"...","universe_domain":"..."}

# Security Configuration
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here

# Rate Limiting Configuration
RATE_LIMIT_CHAT_REQUESTS=20
RATE_LIMIT_CHAT_WINDOW_MS=60000
RATE_LIMIT_CONTACT_REQUESTS=5  
RATE_LIMIT_CONTACT_WINDOW_MS=300000

# Security Configuration
SECURITY_LOG_LEVEL=warn
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Auto-blocking thresholds
AUTO_BLOCK_ENABLED=true
MAX_RATE_LIMIT_VIOLATIONS=5
MAX_VALIDATION_FAILURES=10